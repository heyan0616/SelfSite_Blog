h4 {
  font-size: 1.15rem;
}

@media only screen and (max-width:1180px){
    .theme-default-content:not(.custom){
        max-width: 92%;
    }
}  

p{
	margin-block-end: 0em;
}

// change the siderbar css
.sidebar-group > ul > li > a.sidebar-link{
	font-weight: 550;
}
.sidebar-group > ul > li > a.sidebar-link.active{
	background-color: #d5f0e4;
}
.sidebar .sidebar-sub-headers{
	padding-left: 1.5rem !important;
}

.sidebar-sub-headers > li > a.sidebar-link{
	font-size: 0.92rem;
	color: #666666;
}
.sidebar-sub-headers > li > .sidebar-sub-headers > li > a.sidebar-link{
	font-size: 0.8rem;
	color: #9DAAB6;
}
.sidebar-sub-headers a.sidebar-link.active {
	color: #3eaf7c !important;
}


// page background
.page{
	background: #f6f6f6;
	padding-bottom: 0 !important;
}
.theme-default-content:not(.custom){
    background: #fff;
}
.page-edit{
	background: #fff;
}
.page-nav{
	background: #fff;
	padding-bottom: 1rem !important;
}